<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
  </head>
  <body>
    <div class="main-container">
      
      <!-- Profile Card -->
      <div class="cardpers">
        <div class="profile-picture">
          <img src="/images/uploads/<%= user.dp || 'default.jpg' %>" alt="Profile Picture">
        </div>
        <h2 class="name"><%= user.fullname %></h2>
        <h3 class="username">@<%= user.username %></h3>
        <p class="tagline">Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
        <p class="description">Malik</p>
        <a href="/logout" class="button">Log out</a>

        <!-- Upload Form -->
        <form action="/upload" method="post" enctype="multipart/form-data" class="upload-form">
          <input type="text" name="filecaption" placeholder="some caption">
          <input type="file" name="file" class="form-control mb-2">
          <input type="submit" value="Upload" class="button">
        </form>
      </div>

      <!-- Uploaded Images Gallery -->
      <div class="uploaded-gallery">
        <% if (user.post && user.post.length > 0) { %>
          <% user.post.forEach(function(post) { %>
            <div class="uploaded-item">
              <img src="/images/uploads/<%= post.image%>" alt="User Upload">
              <p class="caption"><%= post.imageText %></p>
            </div>
          <% }) %>
        <% } else { %>
          <p class="no-uploads">No uploads yet.</p>
        <% } %>
      </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  </body>
</html>




